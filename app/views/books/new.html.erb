<!DOCTYPE html>
<html>
  
  <body>
    <div class="list-wrap">
    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>本のタイトル</th>
          <th>感想</th>
          <th conlspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "閲覧", book_path(book.id) %></td>
            <td><%= link_to "編集", edit_book_path(book.id) %></td>
            <td><%= link_to "削除", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
  <h2>New book</h2>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <%= form_with model: @books, url: '/books', method: :post do |f| %>
     <label for="book_title">本のタイトル</iabel>
     <div class="field"><%= f.text_field :title %></div>
     <label for="book_body">感想</label>
     <div class="field"><%= f.text_area :body %></div>
     <div class="actions"><%= f.submit '投稿' %></div>
   <% end %>
  </body>
  
</html>