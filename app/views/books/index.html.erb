<div class="list-wrap">
<h1>Books</h1>
<h3>本のタイトル</h3>
<h3>感想</h3>
<div class="book-box">
<% @books.each do |book| %>
  <div class="book-comment">
    <span class="book-title"><%= book.title %></span>
    <span class="book-body"><%= book.body %></span>
    <%= link_to "閲覧", book_path(book.id) %>
    <%= link_to "編集", edit_book_path(book.id) %>
    <%= link_to "削除", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
  </div>
</div>
<% end %>

<div class="book-form">
<h2>New book</h2>
<%= form_with model: @books, url: '/books', method: :post do |f| %>
  <h4>本のタイトル</h4>
  <%= f.text_field :title %>
  <h4>感想</h4>
  <%= f.text_area :body %>
	
  <%= f.submit '投稿' %>
</div>
<% end %>