<!DOCTYPE html>
<html>
  <head>
    
  </head>
  <body>
    <div class="list-wrap">
    <h1>Books</h1>
    
    <table style="width: 52%;">
     <colgroup>
      <col style="width:29%;">
      <col style="width:50%;">
      <col style="width:7%;">
      <col style="width:7%;">
      <col style="width:7%;">
    </colgroup>
      <thead>
        <tr>
          <th>本のタイトル</th>
          <th>感想</th>
          <th conlspan="3"></th>
        </tr>
      </thead>
      
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "閲覧", book_path(book.id) %></td>
            <td><%= link_to "編集", edit_book_path(book.id) %></td>
            <td><%= link_to "削除", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
  <h2>New book</h2>
  <div class="book-form">
    <%= form_with model: @books, url: '/books', method: :post do |f| %>
      <h4>本のタイトル</h4>
      <div class="field"><%= f.text_field :title %></div>
      <h4>感想</h4>
      <div class="field"><%= f.text_area :body %></div>
    
      <div class="actions"><%= f.submit '投稿' %></div>
    <% end %>
  </div>

  </body>
</html>